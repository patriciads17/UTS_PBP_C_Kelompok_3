<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PYBApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorPrimaryVariant">@color/background_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ButtonOrange" parent="Theme.PYBApp">
        <item name="colorPrimary">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_rounded_orange_10dp</item>
    </style>
    <style name="ButtonBrown" parent="Theme.PYBApp">
        <item name="colorPrimary">@color/brown</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_rounded_brown_10dp</item>
    </style>
    <style name="TextBig">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextNormal">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="EditTextGrey" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="boxBackgroundColor">@color/grey_100</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/transparent</item>
    </style>
    <style name="EditTextWhite" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/transparent</item>
    </style>
</resources>
